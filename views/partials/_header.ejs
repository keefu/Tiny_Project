<% if(username) {%>
<h1><header>TinyApp</header></h1>
  <form method = "POST" action = "/logout" >
    <button type="submit" class= "btn btn-primary">Logout</button>
    <b><p>Logged In As: <%= username%>!</p></b>
  </form>
<% } else { %>
<h1><header>TinyApp</header></h1>
  <form method = "POST" action = "/login" >
    <input class="form-control" type="text" name="username" placeholder="username" style="width: 300px; margin: 1em">
    <button type="submit" class= "btn btn-primary">Login</button>
  </form>
<% } %>
